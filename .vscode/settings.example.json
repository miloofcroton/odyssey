{
  "files.exclude": {
    "**/node_modules": true,
    "**/.swc": true,
  },

  "search.exclude": {
    "**/.swc": true,
    "**/*.snap": true,
    "**/out": true,
    "**/build": true,
    "**/node_modules": true,
    "**/package-lock.json": true,
  },

  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "eslint.useFlatConfig": true,
  "eslint.workingDirectories": [{ "mode": "auto" }],
  "eslint.runtime": "node",
  // "eslint.validate": ["javascript", "javascriptreact", "json", "jsonc", "json5"],

  "cSpell.words": [
    "nitropack"
  ],
}
