{
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "types": ["node", "vite/client"],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "rootDirs": [".", "./.react-router/types"],
    "baseUrl": ".",
    "paths": {
      "@web/*": ["./web/src/*"],
      "@api/*": ["./api/src/*"],
      "@data/*": ["./data/src/*"],
      "@ui/*": ["./ui/src/*"],
      "@content/*": ["./content/src/*"],
    },
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": [
    "./web",
    "./ui",
    "./data",
    "./api",
    "./content"
  ]
}
